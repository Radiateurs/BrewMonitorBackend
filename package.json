{
   "name": "BeerMonitor",
   "version": "0.0.1",
   "description": "Monitor your brew with your brewMonitorKit and your server to have a good fermentation and a good brew",
   "devDependencies": {
      "@types/bcrypt-nodejs": "0.0.31",
      "@types/body-parser": "^1.19.0",
      "@types/cors": "^2.8.6",
      "@types/eslint": "^6.8.0",
      "@types/helmet": "0.0.46",
      "@types/jsonwebtoken": "^8.3.9",
      "@types/lodash": "^4.14.150",
      "@types/node": "^8.0.29",
      "@types/passport": "^1.0.3",
      "@types/passport-facebook": "^2.1.9",
      "@types/passport-local": "^1.0.33",
      "@typescript-eslint/eslint-plugin": "^2.31.0",
      "@typescript-eslint/parser": "^2.31.0",
      "chai": "^4.2.0",
      "concurrently": "^5.2.0",
      "eslint": "^6.4.0",
      "nodemon": "^2.0.3",
      "ts-jest": "^25.5.1",
      "ts-node": "^3.3.0",
      "ts-node-dev": "^1.0.0-pre.44",
      "typescript": "3.3.3333"
   },
   "dependencies": {
      "bcrypt-nodejs": "0.0.3",
      "body-parser": "^1.18.1",
      "class-validator": "^0.12.2",
      "cors": "^2.8.5",
      "express": "^4.17.1",
      "helmet": "^3.22.0",
      "jsonwebtoken": "^8.5.1",
      "lodash": "^4.17.19",
      "passport": "^0.4.1",
      "passport-facebook": "^3.0.0",
      "passport-local": "^1.0.0",
      "pg": "^8.3.0",
      "reflect-metadata": "^0.1.13",
      "typeorm": "0.3.0"
   },
   "scripts": {
      "start": "npm run serve",
      "build": "npm run lint && npm run build-ts",
      "serve": "node dist/index.js",
      "watch-node": "nodemon dist/index.js",
      "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
      "test": "jest --forceExit --coverage --verbose",
      "watch-test": "npm run test -- --watchAll",
      "build-ts": "tsc",
      "watch-ts": "tsc -w",
      "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
      "debug": "npm run build && npm run watch-debug",
      "serve-debug": "nodemon --inspect dist/index.js",
      "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Nodemon\" -c \"green.bold,blue.bold\" \"npm run watch-ts\" \"npm run serve-debug\""
   }
}
